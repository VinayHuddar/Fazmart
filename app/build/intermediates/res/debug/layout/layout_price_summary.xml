<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_white_box"
    android:padding="10dp"
    android:elevation="1dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price_summary"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:textStyle="bold"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_blue_shade2"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">
        <TextView android:id="@+id/order_summary_subtotal_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="@dimen/abc_text_size_subhead_material"/>
        <TextView android:id="@+id/order_summary_subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">
        <TextView android:id="@+id/order_summary_delivery_charges_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="@dimen/abc_text_size_subhead_material"/>
        <TextView android:id="@+id/order_summary_delivery_charges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">
        <TextView android:id="@+id/apply_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="@string/apply_coupon_label"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textColor="@color/blue"
            android:clickable="true"/>
        <TextView android:id="@+id/coupon_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="- 0.00"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">
        <TextView android:id="@+id/use_gift_voucher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="@string/use_gift_voucher_label"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textColor="@color/blue"
            android:clickable="true"/>
        <TextView android:id="@+id/gift_voucher_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="- 0.00"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">
        <TextView android:id="@+id/redeem_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="@string/redeem_points_label"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textColor="@color/blue"
            android:clickable="true"/>
        <TextView android:id="@+id/redeem_points_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="- 0.00"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="1dp">
        <TextView android:id="@+id/order_summary_total_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textStyle="bold"/>
        <TextView android:id="@+id/order_summary_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:gravity="right"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>
