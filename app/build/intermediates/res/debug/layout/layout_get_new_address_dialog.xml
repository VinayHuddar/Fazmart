<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <AutoCompleteTextView android:id="@+id/address_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_customer_name"
        android:textColorHint="@color/light_grey"
        android:singleLine="true"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:paddingLeft="12dp"
        style="@android:style/Widget.AutoCompleteTextView" />
    <AutoCompleteTextView android:id="@+id/address_apt_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_address_flat"
        android:textColorHint="@color/light_grey"
        android:singleLine="true"
        android:paddingLeft="12dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:textSize="@dimen/abc_text_size_subhead_material"
        style="@android:style/Widget.AutoCompleteTextView"/>
    <Spinner android:id="@+id/address_apartment_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_margin="3dp" />
    <TextView android:id="@+id/address_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:hint="@string/prompt_address_area"
        android:textColorHint="@color/light_grey"
        android:layout_margin="3dp"
        android:paddingLeft="12dp"
        style="@android:style/Widget.AutoCompleteTextView"/>
    <TextView android:id="@+id/address_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_subhead_material"
        android:layout_margin="3dp"
        android:paddingLeft="12dp"
        style="@android:style/Widget.AutoCompleteTextView"/>
    <LinearLayout android:id="@+id/add_new_address_button_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button android:id="@+id/new_address_cancel_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_label_cancel"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/white_button"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@color/dark_grey"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="10dp"/>
        <Button android:id="@+id/new_address_done_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_label_done"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/white_button"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@color/dark_grey"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/vinayhuddar/AndroidStudioProjects/MyApps/Fazmart/app/src/main/res/layout/layout_get_new_address_dialog.xml -->