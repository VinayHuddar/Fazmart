<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/ProductImage"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/list_view_product_image"
            android:clickable="true"/>
        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/ProductTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                style="@style/list_view_product_title"/>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView android:id="@+id/ProductOldPrice"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    style="@style/list_view_product_old_price"/>
                <TextView android:id="@+id/ProductCurrentPrice"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    style="@style/list_view_product_current_price"/>
            </LinearLayout>
            <TextView android:id="@+id/ProductOptionsMenu"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                style="@style/options_menu_style"/>
            <LinearLayout android:orientation="horizontal"
                android:layout_height="30dp"
                android:layout_width="match_parent">
                <LinearLayout android:orientation="horizontal"
                    android:layout_height="24dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView android:id="@+id/QtyDecr"
                        android:text=" - "
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:textColor="@color/black"
                        android:gravity="center|center_vertical"
                        android:background="@drawable/quantity_incr_decr_border"
                        android:clickable="true"
                        android:layout_width="24dp"
                        android:layout_height="match_parent" />
                    <TextView android:id="@+id/QuantityInCart"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:layout_width="24dp"
                        android:layout_height="match_parent"
                        android:gravity="center|center_vertical"/>
                    <TextView android:id="@+id/QtyIncr"
                        android:text=" + "
                        android:textColor="@color/black"
                        android:textSize="@dimen/abc_text_size_medium_material"
                        android:gravity="center|center_vertical"
                        android:background="@drawable/quantity_incr_decr_border"
                        android:clickable="true"
                        android:layout_width="24dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <ImageView android:id="@+id/AddToWishlist"
                    android:layout_height="match_parent"
                    android:layout_width="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/add_to_wish_list_icon_grey"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:baselineAlignBottom="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
