<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="8"
    android:rowCount="4"
    android:background="#FFFFFF"
    android:paddingBottom="5dp">
    <ImageView android:id="@+id/ProductImage_Cart"
        android:layout_row="0"
        android:layout_rowSpan="4"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"/>
    <TextView android:id="@+id/ProductTitle_Cart"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="1"
        android:layout_columnSpan="7"
        android:lines="2"
        android:layout_margin="3dp"
        style="@style/list_view_product_title_cart"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical" />
    <TextView android:id="@+id/ProductOptionsMenu_Cart"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_margin="5dp"
        style="@style/options_menu_style"/>
    <TextView android:id="@+id/ProductOldPrice_Cart"
        android:layout_row="2"
        android:layout_rowSpan="1"
        android:layout_column="5"
        android:gravity="end"
        android:layout_columnSpan="3"
        android:textSize="@dimen/abc_text_size_medium_material"/>
    <TextView android:id="@+id/ProductCurrentPrice_Cart"
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="5"
        android:layout_columnSpan="3"
        android:gravity="end"
        android:layout_gravity="center_horizontal|right"
        android:layout_margin="5dp"
        android:textSize="@dimen/abc_text_size_medium_material"/>
    <LinearLayout
        android:layout_row="3"
        android:layout_rowSpan="1"
        android:layout_column="2"
        android:layout_columnSpan="3"
        android:paddingLeft="5dp"
        style="@style/list_view_product_quantity_viewgroup">
        <ImageView android:id="@+id/QtyDecr_Cart"
            style="@style/list_view_product_qty_decr_img"/>
        <TextView android:id="@+id/ProductQuantity_Cart"
            style="@style/list_view_product_quantity"/>
        <ImageView android:id="@+id/QtyIncr_Cart"
            style="@style/list_view_product_qty_incr_img"/>
    </LinearLayout>
</GridLayout>
